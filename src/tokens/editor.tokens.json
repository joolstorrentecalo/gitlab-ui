{
  "editor": {
    "text": {
      "selection": {
        "background": {
          "color": {
            "$value": {
              "default": "{color.blue.100}",
              "dark": "{color.blue.800}"
            },
            "$type": "color",
            "$description": "Used for the background when text is selected in an editor."
          }
        }
      }
    },
    "media": {
      "selection": {
        "background": {
          "color": {
            "$value": {
              "default": "{color.blue.200}",
              "dark": "{color.blue.700}"
            },
            "$type": "color",
            "$description": "Used for the background when a media element is selected in an editor."
          }
        }
      }
    }
  }
}
